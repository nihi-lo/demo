{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "types": ["vitest/globals"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,

    /* Path Aliases */
    "baseUrl": ".",
    "paths": {
      /* 基本パッケージ */
      "@portal-app/*": ["./src/*"],
      "@portal-core": ["./packages/portal-core/src/index"],
      "@portal-core/hooks": ["./packages/portal-core/src/hooks/index"],
      "@portal-core/ui": ["./packages/portal-core/src/components/index"],
      "@wailsjs/*": ["./wailsjs/*"],

      /* サブアプリパッケージ */
      "@packages/*": ["./packages/*/src/index"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "**/*.cjs", "**/*.js"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
