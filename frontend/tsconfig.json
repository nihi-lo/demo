{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "types": ["vitest/globals"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,

    /* Path Aliases */
    "baseUrl": ".",
    "paths": {
      // サブアプリパッケージ
      "@packages/*": ["./packages/*/src/index"],

      // 基本パッケージ
      "@portal-core": ["./packages/portal-core/src/index"],
      "@portal-hooks": ["./packages/portal-hooks/src/index"],
      "@portal-ui": ["./packages/portal-ui/src/index"],
      "@portal-app/*": ["./src/*"],
      "@wailsjs/*": ["./wailsjs/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "**/*.cjs", "**/*.js"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
